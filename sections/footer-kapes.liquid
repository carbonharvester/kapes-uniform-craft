{% comment %}
  Kapes Uniforms Footer Section
  Converted from React component for Shopify integration
{% endcomment %}

<footer class="kapes-footer">
  <div class="kapes-footer__container">
    <!-- Main Footer Content -->
    <div class="kapes-footer__main">
      <!-- Logo and Description Column -->
      <div class="kapes-footer__brand">
        {% if section.settings.logo %}
          <a href="{{ routes.root_url }}" class="kapes-footer__logo-link">
            <img 
              src="{{ section.settings.logo | img_url: '200x' }}" 
              alt="{{ section.settings.logo_alt | default: shop.name }}"
              class="kapes-footer__logo"
              width="160"
              height="auto"
            >
          </a>
        {% endif %}
        
        {% if section.settings.description %}
          <p class="kapes-footer__description">{{ section.settings.description }}</p>
        {% endif %}
        
        <!-- Social Links -->
        {% if section.settings.show_social_links %}
          <div class="kapes-footer__social">
            {% if section.settings.instagram_url %}
              <a href="{{ section.settings.instagram_url }}" class="kapes-footer__social-link" aria-label="{{ 'general.social.instagram' | t }}" target="_blank" rel="noopener">
                <svg class="kapes-footer__social-icon" viewBox="0 0 24 24" fill="currentColor">
