                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.linkedin_url %}
              <a href="{{ section.settings.linkedin_url }}" class="kapes-footer__social-link" aria-label="{{ 'general.social.linkedin' | t }}" target="_blank" rel="noopener">
                <svg class="kapes-footer__social-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      <!-- Navigation Sections -->
      <div class="kapes-footer__nav">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'navigation_section' %}
              <div class="kapes-footer__nav-section" {{ block.shopify_attributes }}>
                {% if block.settings.title %}
                  <h3 class="kapes-footer__nav-title">{{ block.settings.title }}</h3>
                {% endif %}
                
                <ul class="kapes-footer__nav-list">
                  {% for i in (1..10) %}
                    {% assign link_setting = 'link_' | append: i %}
                    {% assign text_setting = 'link_text_' | append: i %}
                    {% if block.settings[link_setting] and block.settings[text_setting] %}
                      <li class="kapes-footer__nav-item">
                        <a href="{{ block.settings[link_setting] }}" class="kapes-footer__nav-link">
                          {{ block.settings[text_setting] }}
                        </a>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    
    <!-- Bottom Footer -->
    <div class="kapes-footer__bottom">
      <div class="kapes-footer__bottom-content">
        {% if section.settings.copyright_text %}
          <p class="kapes-footer__copyright">{{ section.settings.copyright_text }}</p>
        {% endif %}
        
        <!-- Legal Links -->
        {% if section.settings.show_legal_links %}
          <div class="kapes-footer__legal">
            {% if section.settings.privacy_policy_url and section.settings.privacy_policy_text %}
              <a href="{{ section.settings.privacy_policy_url }}" class="kapes-footer__legal-link">
                {{ section.settings.privacy_policy_text }}
              </a>
            {% endif %}
            
            {% if section.settings.terms_of_service_url and section.settings.terms_of_service_text %}
              <a href="{{ section.settings.terms_of_service_url }}" class="kapes-footer__legal-link">
                {{ section.settings.terms_of_service_text }}
              </a>
            {% endif %}
            
            {% if section.settings.cookie_policy_url and section.settings.cookie_policy_text %}
              <a href="{{ section.settings.cookie_policy_url }}" class="kapes-footer__legal-link">
                {{ section.settings.cookie_policy_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

